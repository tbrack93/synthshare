<div class="container messages">
  <div class="col-xs-11 col-xs-offset-1">
    <h3>My Messages</h3>
    <br>
    <div class="col-xs-4 message-tabs">
      <% @bookings.each do |booking|%>
      <%if booking == @bookings.first %>
      <div class="tab active-tab" id=<%= "booking-#{booking.id}"%>>
        <%else%>
        <div class="tab" id=<%= "booking-#{booking.id}"%>>
          <%end%>
          <a href="#"><p> My booking with <%= booking.synth.name %> </p>
            <p class="timeframe"> <%= booking.start_time.strftime("%d/%m/%Y")%> - <%= booking.end_time.strftime("%d/%m/%Y") %> </p></a>
          </div>
          <%end%>

          <% @synths.each do |synth| %>
          <% synth.bookings.each do |booking| %>
          <div class="tab" id=<%= "booking-#{booking.id}"%>>
            <a href="#"><p> Booking request for <%= synth.name %> </p>
              <p class="timeframe"> <%= booking.start_time.strftime("%d/%m/%Y")%> - <%= booking.end_time.strftime("%d/%m/%Y") %> </p></a>
            </div>
            <%end%>
            <%end%>
          </div>
          <div class="col-xs-6 message-content">
            <% @bookings.each do |booking|%>
            <% if booking == @bookings.first %>
            <div class="booking-conversation" id="active-conversation">
              <%else%>
              <div class="booking-conversation">
                <%end%>
                <% booking.messages.each do |message|%>
                <% if message.user == current_user%>
                <div class="col-xs-6 col-xs-offset-6 message-body my-message">
                  <p><%= message.content %></p>
                </div>
                <%else%>
                <div class="col-xs-12 theirs-filler">
                  <div class="col-xs-6 message-body their-message">
                    <p><%= message.content %></p>
                  </div>
                </div>
                <%end%>
                <%end%>
                <div class="col-xs-8 new-message">
                  <%= simple_form_for @message do |f| %>
                  <%= f.input :content, label: "New Message" %>
                  <%= f.hidden_field :user_id, value: current_user.id %>
                  <%= f.hidden_field :booking_id, value: booking.id %>
                  <%= f.submit "Send", remote: true%>
                </div>
              </div>
              <%end%>
              <%end%>
            </div>
          </div>
        </div>
