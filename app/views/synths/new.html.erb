<div class="container">

  <div class="col-xs-5 col-xs-offset-4">
    <h3> Add New Synth </h3>
    <%= simple_form_for @synth do |f| %>
      <%= f.input :name %>
      <%= f.input :model_no, hint: ("7 characters"), input_html: {minlength:7}  %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.input :description %>
      <%= f.input :price, label: 'Price per hour' %>
      <%= f.input :processor, collection: ["7CX-CNS Decacore", "9FC-JKS Undecacore", "1LL-WNA Tredecacore", "Other"] %>
      <div class="col-xs-6 left">
      <%= f.input :body_format, collection: ["Female", "Male", "Other"] %>
      <%= f.input :memory, collection: ["12 PTs", "15 PTs", "17 PTs", "Other"] %>
      </div>
      <div class="col-xs-6 right">
      <%= f.input :battery_life, collection: ["36 hrs", "42 hrs", "46 hrs", "Other"] %>
      <%= f.input :build_date, label: "Batch Date", collection: ["Dec 2017", "Feb 2018", "Apr 2018", "Other"] %>
    </div>
        <h3> Skills </h3>
        <div class="col-xs-6 skills">
      <%= f.input :cooking %>
      <%= f.input :childcare, label: "Child Care" %>
      <%= f.input :quantumelectrodynamics, label: "Quantum Elecrodynamics" %>
      <%= f.input :healthcare, label: "Health Care" %>
      <%= f.input :diy, label: "DIY"%>
      <%= f.input :gardening%>
      <%= f.input :architecturalengineering, label: "Architectural Engineering" %>
      <%= f.input :self_defense%>
      <%= f.input :hostagenegotiation, label: "Hostage Negotiation"%>
    </div>
     <div class="col-xs-6 skills">
      <%= f.input :cleaning %>
      <%= f.input :animalcare, label: "Dog Walking" %>
      <%= f.input :elderlycare, label: "Elderly Care" %>
      <%= f.input :cardiothoracic, label: "Cardiothoracic Surgery"%>
      <%= f.input :painting%>
      <%= f.input :construction%>
      <%= f.input :driving%>
      <%= f.input :security%>
      <%= f.input :entertainment, label: "Juggling" %>
    </div>

      <%= f.submit "Add Synth"%>
    <%end%>

  </div>
</div>
